#include <iostream>
using namespace std;

class CricketRecord {
private:
    int matches;
    int runs;
    int centuries;

public:
    void inputRecord(string format);

    inline float calculateAverage();   // Inline function
    inline int getCenturies();         // Inline function
    void displayRecord(string format);
};

// Inline function to calculate average
inline float CricketRecord::calculateAverage() {
    return (matches == 0) ? 0 : (float)runs / matches;
}

// Inline function to get centuries
inline int CricketRecord::getCenturies() {
    return centuries;
}

// Input function
void CricketRecord::inputRecord(string format) {
    cout << "Enter record for " << format << " cricket:\n";
    cout << "Number of matches: ";
    cin >> matches;
    cout << "Total runs: ";
    cin >> runs;
    cout << "Number of centuries: ";
    cin >> centuries;
}

// Display function
void CricketRecord::displayRecord(string format) {
    cout << "\n--- " << format << " Cricket Record ---\n";
    cout << "Matches Played: " << matches << endl;
    cout << "Total Runs: " << runs << endl;
    cout << "Centuries: " << getCenturies() << endl;
    cout << "Average Runs per Match: " << calculateAverage() << endl;
}

int main() {
    CricketRecord odi, t20, test;

    // Input records
    odi.inputRecord("ODI");
    t20.inputRecord("T20");
    test.inputRecord("Test");

    // Display records
    odi.displayRecord("ODI");
    t20.displayRecord("T20");
    test.displayRecord("Test");

    return 0;
}
