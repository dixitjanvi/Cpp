#include<iostream>
using namespace std;

int main()
{
    int arr[5];
    int i;
    int sum=0,avarage=0;
    cout<<"Enter the value ";
    for (i=0;i<=5;i++){
    cin>>arr[i];
    }
    for (i=0;i<=5;i++){
        sum+=arr[i];
        avarage=sum/2;
    }
    cout<<"sum is"<<sum<<endl;
    cout<<"avarage is"<<avarage<<endl;
    return 0;
}
